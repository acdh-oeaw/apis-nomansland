    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django runserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "env": {
                "DATABASE_URL": "mysql://apis:apis@127.0.0.1:3306/apis"
            }
        },
        {
				"name": "Nomansland remote Jupyter",
				"type": "python",
				"request": "launch",
				"program": "${workspaceFolder}/manage.py",
				"args": [
					"shell_plus",
					"--notebook",
					"--settings=apis.settings.nomansland_remote"
				],
				"django": true
			},
    ]
}